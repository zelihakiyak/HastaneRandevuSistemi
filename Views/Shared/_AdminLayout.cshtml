<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Paneli</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Plus Jakarta Sans', sans-serif; background-color: #f8fafc; }
    </style>
</head>
<body class="flex bg-gray-50">
    <aside class="w-72 bg-white min-h-screen border-r border-gray-100 flex flex-col sticky top-0">
        <div class="p-8">
            <div class="flex items-center gap-3 mb-10">
                <div class="w-10 h-10 bg-red-600 rounded-xl flex items-center justify-center text-white shadow-lg shadow-red-200">
                    <i class="bi bi-person-gear text-xl"></i>
                </div>
                <span class="text-xl font-black tracking-tighter text-gray-900">Admin Paneli</span>
            </div>

            <nav class="space-y-2">
                <a asp-controller="Admin" asp-action="Index" class="flex items-center gap-3 px-4 py-3 rounded-2xl text-sm font-bold transition-all @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "bg-red-50 text-red-600" : "text-gray-400 hover:bg-gray-50 hover:text-gray-900")">
                    <i class="bi bi-person-badge"></i> Doktor Yönetimi
                </a>

                <a asp-controller="Admin" asp-action="Departments" class="flex items-center gap-3 px-4 py-3 rounded-2xl text-sm font-bold transition-all @(ViewContext.RouteData.Values["Action"]?.ToString() == "Departments" ? "bg-red-50 text-red-600" : "text-gray-400 hover:bg-gray-50 hover:text-gray-900")">
                    <i class="bi bi-grid-1x2"></i> Bölüm Yönetimi
                </a>

                <a asp-controller="Admin" asp-action="Patients" class="flex items-center gap-3 px-4 py-3 rounded-2xl text-sm font-bold transition-all @(ViewContext.RouteData.Values["Action"]?.ToString() == "Patients" ? "bg-red-50 text-red-600" : "text-gray-400 hover:bg-gray-50 hover:text-gray-900")">
                    <i class="bi bi-people"></i> Hasta Yönetimi
                </a>

                <a asp-controller="Admin" asp-action="AllAppointments" class="flex items-center gap-3 px-4 py-3 rounded-2xl text-sm font-bold transition-all @(ViewContext.RouteData.Values["Action"]?.ToString() == "AllAppointments" ? "bg-red-50 text-red-600" : "text-gray-400 hover:bg-gray-50 hover:text-gray-900")">
                    <i class="bi bi-calendar-check"></i> Tüm Randevular
                </a>
            </nav>
        </div>

        <div class="mt-auto p-8 border-t border-gray-50">
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="flex items-center gap-3 px-4 py-3 w-full text-left rounded-2xl text-sm font-bold text-gray-400 hover:bg-red-50 hover:text-red-600 transition-all">
                    <i class="bi bi-box-arrow-left"></i> Çıkış Yap
                </button>
            </form>
        </div>
    </aside>

    <main class="flex-1 p-12">
        @RenderBody()
    </main>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>