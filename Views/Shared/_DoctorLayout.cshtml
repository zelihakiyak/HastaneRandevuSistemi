<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Doktor Paneli</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Plus Jakarta Sans', sans-serif; }
    </style>
</head>
<body class="bg-[#F8F9FA]">
    <div class="flex min-h-screen">
        <aside class="w-72 bg-white border-r border-gray-100 flex flex-col fixed h-full">
            <div class="p-8 text-center border-b border-gray-50">
                <div class="w-20 h-20 bg-red-50 rounded-full flex items-center justify-center mx-auto mb-4 text-red-600 font-bold text-2xl shadow-sm">
                    @User.Identity.Name.Substring(0, 1)
                </div>
                <h2 class="font-extrabold text-gray-900 text-lg leading-tight">Dr. @User.Identity.Name</h2>
                <p class="text-xs text-gray-400 font-semibold uppercase tracking-widest mt-1">Doktor Paneli</p>
            </div>

            <nav class="flex-1 p-6 space-y-2 mt-4">
                <a asp-controller="Doctor" asp-action="Index"
                   class="flex items-center gap-4 px-4 py-3.5 rounded-2xl transition-all @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "bg-red-50 text-red-600 font-bold shadow-sm shadow-red-50" : "text-gray-400 hover:bg-gray-50 hover:text-gray-600")">
                    <i class="bi bi-calendar-event text-lg"></i>
                    <span>Gelecek Randevular</span>
                </a>

                <a asp-controller="Doctor" asp-action="PastAppointments"
                   class="flex items-center gap-4 px-4 py-3.5 rounded-2xl transition-all @(ViewContext.RouteData.Values["action"].ToString() == "PastAppointments" ? "bg-red-50 text-red-600 font-bold shadow-sm shadow-red-50" : "text-gray-400 hover:bg-gray-50 hover:text-gray-600")">
                    <i class="bi bi-clock-history text-lg"></i>
                    <span>Geçmiş Randevular</span>
                </a>

                <a asp-controller="Doctor" asp-action="MyPatients"
                   class="flex items-center gap-4 px-4 py-3.5 rounded-2xl transition-all @(ViewContext.RouteData.Values["action"].ToString() == "MyPatients" ? "bg-red-50 text-red-600 font-bold shadow-sm shadow-red-50" : "text-gray-400 hover:bg-gray-50 hover:text-gray-600")">
                    <i class="bi bi-people text-lg"></i>
                    <span>Hastalarım</span>
                </a>
            </nav>

            <div class="p-6 border-t border-gray-50">
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="w-full flex items-center gap-4 px-4 py-3.5 text-gray-400 hover:text-red-600 transition-colors font-medium">
                        <i class="bi bi-box-arrow-left text-lg"></i>
                        <span>Güvenli Çıkış</span>
                    </button>
                </form>
            </div>
        </aside>

        <main class="flex-1 ml-72 p-10">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>