<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthConnect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #faf9f9;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            border-bottom: 1px solid #eee;
        }

        .nav-link {
            color: #6c757d !important;
            font-weight: 500;
        }

            .nav-link.active {
                color: #000 !important;
            }

        .btn-signup {
            background-color: #e63946;
            color: white;
            border: none;
            padding: 6px 16px;
            border-radius: 6px;
            font-weight: 500;
        }

            .btn-signup:hover {
                background-color: #d62839;
            }

        .login-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 90vh;
        }

        .login-card {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
            padding: 2rem;
            width: 100%;
            max-width: 380px;
        }

        .btn-login {
            background-color: #e63946;
            border: none;
            color: white;
            font-weight: 500;
        }

            .btn-login:hover {
                background-color: #d62839;
            }

        .signup-link {
            font-size: 0.9rem;
            margin-top: 1rem;
            text-align: center;
        }

            .signup-link a {
                color: #e63946;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm bg-white px-4">
        <a class="navbar-brand fw-bold text-danger" href="#">HealthConnect</a>
        <div class="ms-auto d-flex align-items-center">
            <a class="nav-link @(ViewData["ActiveTab"]?.ToString() == "Patients" ? "active" : "")  me-3" href="/Patient/Login">For Patients</a> 
            <a class="nav-link @(ViewData["ActiveTab"]?.ToString() == "Doctors" ? "active" : "")  me-3" href="/Doctor/Login">For Doctors</a> 
            <a class="nav-link @(ViewData["ActiveTab"]?.ToString() == "Admins" ? "active" : "")  me-3" href="/Admin/Login">For Admins</a> 
            <a href="#" class="btn btn-signup ms-3">Sign up</a>
        </div>
    </nav>

    @RenderBody()
</body>
</html>
