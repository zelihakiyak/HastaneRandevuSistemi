<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthConnect</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 flex flex-col min-h-screen">

    <header class="bg-white border-b border-gray-100 sticky top-0 z-50 shadow-sm">
        <nav class="container mx-auto px-4 py-3 flex items-center justify-between">

            <a class="flex items-center gap-2 no-underline group" asp-controller="Home" asp-action="Index">
                <i class="bi bi-hospital text-2xl text-red-600 transition-transform group-hover:scale-110"></i>
                <span class="text-xl font-bold tracking-tight text-red-600">HealthConnect</span>
            </a>

            <div class="hidden md:flex items-center gap-6">
                <a class="text-sm font-bold text-gray-600 hover:text-red-600 transition no-underline" asp-controller="Home" asp-action="Index">Ana Sayfa</a>

                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="text-sm font-bold text-gray-600 hover:text-red-600 transition no-underline" asp-controller="Admin" asp-action="Departments">Bölüm Yönetimi</a>
                        <a class="text-sm font-bold text-gray-600 hover:text-red-600 transition no-underline" asp-controller="Admin" asp-action="Index">Doktor Yönetimi</a>
                        <a class="text-sm font-bold text-gray-600 hover:text-red-600 transition no-underline" asp-controller="Admin" asp-action="AllAppointments">Tüm Randevular</a>

                    }

                    if (User.IsInRole("Patient"))
                    {
                        <a class="text-sm font-bold text-gray-600 hover:text-red-600 transition no-underline" asp-controller="Appointment" asp-action="Index">Randevularım</a>
                        <a class="text-sm font-bold text-gray-600 hover:text-red-600 transition no-underline" asp-controller="Appointment" asp-action="Create">Randevu Al</a>
                    }
                    else if (User.IsInRole("Doctor"))
                    {
                        <a class="text-sm font-bold text-gray-600 hover:text-red-600 transition no-underline" asp-controller="Doctor" asp-action="Index">Takvimim</a>
                    }
                }
            </div>

            <div class="flex items-center gap-3">
                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("Patient"))
                    {
                        <div class="relative inline-block text-left" id="userMenuContainer">
                            <button type="button" onclick="toggleUserMenu()" class="flex items-center gap-2 px-4 py-2 rounded-2xl hover:bg-gray-100 transition-all border border-gray-100 bg-white shadow-sm">
                                <div class="w-8 h-8 rounded-full bg-red-600 flex items-center justify-center text-white text-xs font-bold shadow-md shadow-red-100">
                                    @User.Identity.Name.Substring(0, 1).ToUpper()
                                </div>
                                <span class="text-sm font-bold text-gray-700">@User.Identity.Name</span>
                                <i class="bi bi-chevron-down text-xs text-gray-400"></i>
                            </button>

                            <div id="userDropdown" class="hidden absolute right-0 mt-2 w-56 origin-top-right bg-white border border-gray-100 rounded-2xl shadow-xl z-50 overflow-hidden">
                                <div class="py-2">
                                    <a asp-controller="Account" asp-action="ChangePassword" class="flex items-center gap-3 px-4 py-3 text-sm text-gray-600 hover:bg-gray-50 transition-colors font-bold no-underline">
                                        <i class="bi bi-gear-fill text-gray-400"></i>
                                        Şifre Değiştir
                                    </a>
                                    <div class="border-t border-gray-50 my-1"></div>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="flex items-center gap-3 w-full px-4 py-3 text-sm text-red-500 hover:bg-red-50 transition-colors font-bold text-left border-none bg-transparent">
                                            <i class="bi bi-box-arrow-left"></i>
                                            Çıkış Yap
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="flex items-center gap-3 bg-gray-50 px-4 py-2 rounded-2xl border border-gray-100">
                            <i class="bi bi-person-circle text-red-600"></i>
                            <span class="text-sm font-bold text-gray-900">@User.Identity.Name</span>
                        </div>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="bg-red-50 text-red-600 px-4 py-2 rounded-2xl font-bold hover:bg-red-600 hover:text-white transition text-sm">Çıkış</button>
                        </form>
                    }
                }
                else
                {
                    <a class="text-sm font-bold text-gray-600 hover:text-red-600 transition no-underline" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                    <a class="bg-red-600 text-white px-5 py-2 rounded-2xl font-bold hover:bg-red-700 transition text-sm shadow-lg shadow-red-100 no-underline" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                }
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow container mx-auto px-4 py-8">
        @RenderBody()
    </main>

    <footer class="bg-white border-t border-gray-100 py-4 mt-auto">
        <div class="container mx-auto px-4 text-center text-xs text-gray-500 font-medium">
            <span>&copy; 2025 - <strong class="text-red-600">HealthConnect</strong> - Ankara Üniversitesi Projesi</span>
            <span class="mx-3 text-gray-300">|</span>
            <a asp-controller="Home" asp-action="Privacy" class="hover:text-red-600 no-underline transition">Gizlilik Politikası</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            var success = '@(TempData["SuccessMessage"] ?? TempData["Success"])';
            if (success && success.length > 0) {
                Swal.fire({
                    icon: 'success',
                    title: 'Başarılı!',
                    text: success,
                    confirmButtonColor: '#ef4444'
                });
            }

            var error = '@(TempData["ErrorMessage"] ?? TempData["Error"])';
            if (error && error.length > 0) {
                Swal.fire({
                    icon: 'error',
                    title: 'Hata!',
                    text: error,
                    confirmButtonColor: '#1f2937'
                });
            }
        });
            function toggleUserMenu() {
            const dropdown = document.getElementById('userDropdown');
            if(dropdown) {
                dropdown.classList.toggle('hidden');
            }
        }

        // Menü dışına tıklandığında kapatma mantığı
        window.addEventListener('click', function(e) {
            const container = document.getElementById('userMenuContainer');
            const dropdown = document.getElementById('userDropdown');
            if (container && !container.contains(e.target)) {
                if (dropdown) dropdown.classList.add('hidden');
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)  
</body>
</html>