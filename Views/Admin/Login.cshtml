@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Admin Panel Login";
    ViewData["ActiveTab"] = "Admins";
}

<div class="login-container">
    <div class="login-card">
        <h4 class="text-center fw-semibold mb-2">Admin Panel Login</h4>
        <p class="text-center text-muted mb-4">Access the management dashboard</p>

        <form asp-action="Login" asp-controller="Admin" method="post">
            <div class="mb-3">
                <label class="form-label">Email address</label>
                <input type="email" class="form-control" name="Email" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" name="Password" required />
            </div>
            <button type="submit" class="btn btn-login w-100">Login</button>
        </form>

        <div class="signup-link">
            Don't have an account? <a href="#">Sign up here</a>
        </div>
    </div>
</div>
