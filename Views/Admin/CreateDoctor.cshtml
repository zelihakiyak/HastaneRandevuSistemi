@model HastaneRandevuSistemi.Models.Doctor

@{
    ViewData["Title"] = "Yeni Doktor Ekle";
}

<div class="max-w-2xl mx-auto py-10 px-4">
    <div class="flex items-center gap-4 mb-8">
        <a asp-action="Index" class="text-gray-400 hover:text-red-600 transition">
            <i class="bi bi-arrow-left-circle text-3xl"></i>
        </a>
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Yeni Doktor Kaydı</h1>
            <p class="text-gray-500 text-sm font-medium">Sisteme yeni bir uzman doktor kaydı yapıyorsunuz.</p>
        </div>
    </div>

    <div class="bg-white rounded-3xl shadow-xl shadow-gray-100 border border-gray-100 overflow-hidden">
        <form asp-action="CreateDoctor" method="post" class="p-8 space-y-5">
            @Html.AntiForgeryToken()

            <div>
                <label asp-for="FullName" class="block text-xs font-bold text-gray-700 uppercase mb-2 ml-1">Tam Adı</label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 pl-4 flex items-center text-gray-400">
                        <i class="bi bi-person"></i>
                    </span>
                    <input asp-for="FullName" class="block w-full pl-11 pr-4 py-3 bg-gray-50 border border-gray-100 rounded-2xl focus:bg-white focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all outline-none" placeholder="Ahmet Yılmaz">
                </div>
                <span asp-validation-for="FullName" class="text-red-500 text-xs mt-1 ml-1"></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                <div>
                    <label asp-for="Email" class="block text-xs font-bold text-gray-700 uppercase mb-2 ml-1">E-Posta</label>
                    <input asp-for="Email" type="email" class="block w-full px-4 py-3 bg-gray-50 border border-gray-100 rounded-2xl focus:bg-white focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all outline-none" placeholder="doktor@hastane.com">
                    <span asp-validation-for="Email" class="text-red-500 text-xs mt-1 ml-1"></span>
                </div>

                <div>
                    <label asp-for="Phone" class="block text-xs font-bold text-gray-700 uppercase mb-2 ml-1">Telefon Numarası</label>
                    <input asp-for="Phone"
                           type="text"
                           maxlength="11"
                           placeholder="05xxxxxxxxx"
                           onkeypress="return event.charCode >= 48 && event.charCode <= 57"
                           class="block w-full px-4 py-3 bg-gray-50 border border-gray-100 rounded-2xl focus:bg-white focus:ring-2 focus:ring-red-500 transition-all outline-none" />

                    <span asp-validation-for="Phone" class="text-red-500 text-xs mt-1 ml-1 font-bold"></span>
                </div>
            </div>

            <div>
                <label asp-for="DepartmentId" class="block text-xs font-bold text-gray-700 uppercase mb-2 ml-1">Uzmanlık Alanı / Bölüm</label>
                <div class="relative">
                    <select asp-for="DepartmentId" class="block w-full px-4 py-3 bg-gray-50 border border-gray-100 rounded-2xl focus:bg-white focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all outline-none appearance-none">
                        <option value="">-- Lütfen Bölüm Seçiniz --</option>
                        @if (ViewBag.Departments != null)
                        {
                            foreach (var dept in (IEnumerable<HastaneRandevuSistemi.Models.Department>)ViewBag.Departments)
                            {
                                <option value="@dept.Id">@dept.Name</option>
                            }
                        }
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-gray-400">
                        <i class="bi bi-chevron-down"></i>
                    </div>
                </div>
                <span asp-validation-for="DepartmentId" class="text-red-500 text-xs mt-1 ml-1"></span>
            </div>

            <div>
                <label class="block text-xs font-bold text-gray-700 uppercase mb-2 ml-1">Sistem Giriş Şifresi</label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 pl-4 flex items-center text-gray-400">
                        <i class="bi bi-key"></i>
                    </span>
                    <input name="password" type="password" required class="block w-full pl-11 pr-4 py-3 bg-gray-50 border border-gray-100 rounded-2xl focus:bg-white focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all outline-none" placeholder="••••••••">
                </div>
            </div>

            <div class="pt-4">
                <button type="submit" class="w-full py-4 bg-red-600 hover:bg-red-700 text-white font-black rounded-2xl transition-all shadow-lg shadow-red-100 flex items-center justify-center gap-2 uppercase tracking-widest text-sm">
                    <i class="bi bi-check-circle-fill"></i> Doktoru Kaydet
                </button>
            </div>
        </form>
    </div>
    <div asp-validation-summary="All" class="text-red-600 font-bold mb-4"></div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}