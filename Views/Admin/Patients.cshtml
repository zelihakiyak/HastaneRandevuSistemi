@model IEnumerable<HastaneRandevuSistemi.Models.Patient>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Hasta Yönetimi";
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-black text-gray-900">Sistemdeki Tüm Hastalar</h1>
        <span class="bg-blue-50 text-blue-600 px-4 py-2 rounded-xl text-sm font-bold">@Model.Count() Kayıt</span>
    </div>

    <div class="bg-white rounded-3xl border border-gray-100 shadow-sm overflow-hidden">
        <table class="w-full text-left">
            <thead class="bg-gray-50 border-b border-gray-100">
                <tr>
                    <th class="px-6 py-4 text-[10px] font-black text-gray-400 uppercase tracking-widest">Ad Soyad</th>
                    <th class="px-6 py-4 text-[10px] font-black text-gray-400 uppercase tracking-widest">T.C. Kimlik / Email</th>
                    <th class="px-6 py-4 text-[10px] font-black text-gray-400 uppercase tracking-widest text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-50">
                @foreach (var p in Model)
                {
                    <tr class="hover:bg-gray-50/50 transition-colors">
                        <td class="px-6 py-4">
                            <div class="font-bold text-gray-900">@p.FullName</div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-gray-600">@p.IdentityNumber</div>
                            <div class="text-xs text-gray-400">@p.Email</div>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <form asp-action="DeletePatient" asp-route-id="@p.Id" method="post" onsubmit="return confirm('Bu hastayı silmek istediğinize emin misiniz? Tüm randevuları da silinebilir.')">
                                <button type="submit" class="text-red-500 hover:bg-red-50 p-2 rounded-lg transition-colors">
                                    <i class="bi bi-trash3-fill"></i> Sil
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>