@model HastaneRandevuSistemi.Models.Appointment

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Randevu Düzenle</h4>
                </div>
                <div class="card-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="PatientId" />
                        <input type="hidden" asp-for="IsActive" />

                        <div class="mb-3">
                            <label asp-for="DoctorId" class="form-label">Doktor</label>
                            <select asp-for="DoctorId" class="form-select" asp-items="ViewBag.Doctors"></select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AppointmentDate" class="form-label">Tarih</label>
                            <input asp-for="AppointmentDate" type="date" class="form-control" />
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AppointmentTime" class="form-label">Saat</label>
                            <input asp-for="AppointmentTime" type="time" class="form-control" />
                            <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}