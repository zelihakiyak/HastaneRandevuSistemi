@model HastaneRandevuSistemi.ViewModels.AppointmentListViewModel

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-8">Randevularım</h1>

    <div class="mb-10">
        <h2 class="text-xl font-semibold mb-4">Aktif Randevular</h2>
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <table class="min-w-full leading-normal">
                <thead>
                    <tr class="bg-gray-50 border-b">
                        <th class="px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Tarih</th>
                        <th class="px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Saat</th>
                        <th class="px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Doktor</th>
                        <th class="px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Bölüm</th>
                        <th class="px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase text-right">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ActiveAppointments)
                    {
                        <tr class="border-b hover:bg-gray-50 transition">
                            <td class="px-5 py-4 text-sm">@item.DateFormatted</td>
                            <td class="px-5 py-4 text-sm">@item.TimeFormatted</td>
                            <td class="px-5 py-4 text-sm font-medium text-gray-900">@item.DoctorName</td>
                            <td class="px-5 py-4 text-sm text-gray-600">@item.DepartmentName</td>
                            <td class="px-5 py-4 text-sm text-right">
                                <form asp-action="Cancel" method="post" onsubmit="return confirm('Bu randevuyu iptal etmek istediğinize emin misiniz?');">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="text-red-600 hover:text-red-900 font-semibold">İptal Et</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div>
        <h2 class="text-xl font-semibold mb-4">Geçmiş Randevular</h2>
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <table class="min-w-full leading-normal">
                <thead>
                    <tr class="bg-gray-50 border-b">
                        <th class="px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Tarih</th>
                        <th class="px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Saat</th>
                        <th class="px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Doktor</th>
                        <th class="px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PastAppointments)
                    {
                        <tr class="border-b bg-gray-50/30">
                            <td class="px-5 py-4 text-sm">@item.DateFormatted</td>
                            <td class="px-5 py-4 text-sm text-gray-500">@item.TimeFormatted</td>
                            <td class="px-5 py-4 text-sm text-gray-500">@item.DoctorName</td>
                            <td class="px-5 py-4 text-sm">
                                <span class="px-3 py-1 rounded-full text-xs font-semibold @item.StatusClass">
                                    @item.StatusLabel
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>