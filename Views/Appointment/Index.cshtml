@model IEnumerable<HastaneRandevuSistemi.Models.Appointment>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Randevularım</h2>
        <a asp-action="Create" class="btn btn-danger">+ Yeni Randevu Al</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Tarih</th>
                        <th>Saat</th>
                        <th>Doktor</th>
                        <th>Bölüm</th>
                        <th>Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.AppointmentDate.ToString("dd.MM.yyyy")</td>

                            <td>@item.AppointmentTime.ToString(@"hh\:mm")</td>

                            <td>@item.Doctor.FullName</td>
                            <td>@item.Doctor.Department</td>

                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">İptal Edildi</span>
                                }
                            </td>

                            <td class="text-end">
                                @if (item.IsActive)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-2">
                                        Düzenle
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Bu randevuyu iptal etmek istediğinize emin misiniz?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            İptal Et
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }

                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                Henüz bir randevunuz bulunmamaktadır.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
