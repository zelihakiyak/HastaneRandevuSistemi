@model IEnumerable<HastaneRandevuSistemi.Models.Appointment>
@{
    Layout = "_DoctorLayout";
    ViewData["Title"] = "Dashboard";
    var today = DateTime.Today;

    // Randevuları mantıksal gruplara ayırıyoruz
    var todaysAppointments = Model.Where(a => a.AppointmentDate.Date == today).OrderBy(a => a.AppointmentTime).ToList();
    var upcomingAppointments = Model.Where(a => a.AppointmentDate.Date > today).OrderBy(a => a.AppointmentDate).ThenBy(a => a.AppointmentTime).ToList();
}

<div class="space-y-10">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-3xl font-black text-gray-900 tracking-tighter">Takvimim</h1>
            <p class="text-gray-400 font-medium italic">@today.ToString("dd MMMM yyyy, dddd")</p>
        </div>
        <div class="flex gap-3">
            <div class="bg-white border border-gray-100 px-6 py-3 rounded-2xl shadow-sm">
                <span class="block text-[10px] font-bold text-gray-400 tracking-widest">Bugün</span>
                <span class="text-xl font-black text-red-600">@todaysAppointments.Count</span>
            </div>
            <div class="bg-white border border-gray-100 px-6 py-3 rounded-2xl shadow-sm">
                <span class="block text-[10px] font-bold text-gray-400 tracking-widest">Gelecek</span>
                <span class="text-xl font-black text-gray-900">@upcomingAppointments.Count</span>
            </div>
        </div>
    </div>

    <section>
        <div class="flex items-center gap-3 mb-6">
            <div class="w-2 h-8 bg-red-500 rounded-full"></div>
            <h2 class="text-xl font-extrabold text-gray-900">Bugünkü Randevular</h2>
        </div>

        @if (!todaysAppointments.Any())
        {
            <div class="bg-white border-2 border-dashed border-gray-100 rounded-[2.5rem] p-16 text-center">
                <div class="w-20 h-20 bg-gray-50 rounded-full flex items-center justify-center mx-auto mb-4 text-gray-300">
                    <i class="bi bi-calendar-x text-3xl"></i>
                </div>
                <p class="text-gray-400 font-medium">Bugün için henüz bir randevu kaydı bulunmuyor.</p>
            </div>
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
                @foreach (var app in todaysAppointments)
                {
                    <div class="bg-white p-6 rounded-[2rem] border border-gray-100 shadow-sm hover:shadow-xl hover:scale-[1.02] transition-all duration-300 group relative overflow-hidden">
                        <div class="absolute top-0 right-0 bg-red-50 text-red-600 px-6 py-2 rounded-bl-2xl font-black text-sm">
                            @app.AppointmentTime.ToString(@"hh\:mm")
                        </div>

                        <div class="flex items-center gap-4 mb-6">
                            <div class="w-14 h-14 rounded-2xl bg-gray-50 flex items-center justify-center text-gray-400 group-hover:bg-red-50 group-hover:text-red-600 transition-colors">
                                <i class="bi bi-person-bounding-box text-2xl"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-900 text-lg leading-tight">@app.Patient.FullName</h3>
                                <p class="text-xs text-gray-400 font-medium">TC: @app.Patient.IdentityNumber</p>
                            </div>
                        </div>

                        <div class="flex items-center justify-between pt-4 border-t border-gray-50">
                            <span class="text-[10px] font-bold text-gray-300 uppercase tracking-tighter italic">Sistem Otomatik Tamamlar</span>

                            <form asp-action="MarkAsMissed" asp-route-id="@app.Id" method="post" onsubmit="return confirm('Bu hastayı gelmedi olarak işaretlemek istediğinize emin misiniz?')">
                                <button type="submit" class="flex items-center gap-2 px-4 py-2 bg-gray-50 hover:bg-red-50 text-gray-400 hover:text-red-600 rounded-xl text-xs font-bold transition-all">
                                    <i class="bi bi-person-x-fill"></i>
                                    Gelmedi
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }
    </section>

    <section>
        <div class="flex items-center gap-3 mb-6">
            <div class="w-2 h-8 bg-gray-300 rounded-full"></div>
            <h2 class="text-xl font-extrabold text-gray-900">Gelecek Randevular</h2>
        </div>

        <div class="bg-white rounded-[2.5rem] border border-gray-100 shadow-sm overflow-hidden">
            <table class="w-full text-left">
                <thead class="bg-gray-50 border-b border-gray-100">
                    <tr>
                        <th class="px-8 py-5 text-[10px] font-black text-gray-400 uppercase tracking-widest">Randevu Tarihi</th>
                        <th class="px-8 py-5 text-[10px] font-black text-gray-400 uppercase tracking-widest">Saat</th>
                        <th class="px-8 py-5 text-[10px] font-black text-gray-400 uppercase tracking-widest">Hasta Bilgisi</th>
                        <th class="px-8 py-5 text-[10px] font-black text-gray-400 uppercase tracking-widest text-right">Durum</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    @foreach (var app in upcomingAppointments)
                    {
                        <tr class="hover:bg-gray-50/50 transition-colors group">
                            <td class="px-8 py-5">
                                <div class="flex items-center gap-3">
                                    <i class="bi bi-calendar-event text-red-500"></i>
                                    <span class="font-bold text-gray-900">@app.AppointmentDate.ToString("dd MMMM yyyy")</span>
                                </div>
                            </td>
                            <td class="px-8 py-5 text-gray-500 font-bold">@app.AppointmentTime.ToString(@"hh\:mm")</td>
                            <td class="px-8 py-5 font-medium text-gray-700">@app.Patient.FullName</td>
                            <td class="px-8 py-5 text-right">
                                <span class="px-3 py-1 bg-blue-50 text-blue-600 text-[10px] font-black uppercase rounded-full">Beklemede</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>