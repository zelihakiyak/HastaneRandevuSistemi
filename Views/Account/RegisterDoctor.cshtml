@model HastaneRandevuSistemi.ViewModels.DoctorRegisterViewModel

@{
    ViewData["Title"] = "Doktor Kaydı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white text-center py-3">
                    <h4 class="mb-0">Doktor Kaydı</h4>
                    <small>Sisteme doktor olarak giriş yapın</small>
                </div>

                <div class="card-body p-4">
                    <form asp-action="RegisterDoctor" method="post">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-bold">Ad Soyad / Ünvan</label>
                            <input asp-for="FullName" class="form-control" placeholder="Örn: Dr. Ahmet Yılmaz" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Department" class="form-label fw-bold">Branş / Uzmanlık</label>
                            <select asp-for="Department" class="form-select">
                                <option value="">Lütfen Seçiniz...</option>
                                <option value="Dahiliye">Dahiliye</option>
                                <option value="Kardiyoloji">Kardiyoloji</option>
                                <option value="Göz Hastalıkları">Göz Hastalıkları</option>
                                <option value="Ortopedi">Ortopedi</option>
                                <option value="Nöroloji">Nöroloji</option>
                                <option value="KBB">Kulak Burun Boğaz</option>
                                <option value="Genel Cerrahi">Genel Cerrahi</option>
                                <option value="Çocuk Sağlığı">Çocuk Sağlığı</option>
                            </select>
                            <span asp-validation-for="Department" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">E-Posta Adresi</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="doktor@hastane.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold">Şifre</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold">Şifre (Tekrar)</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg">Kaydı Tamamla</button>
                            <a asp-action="Login" class="btn btn-outline-secondary">Zaten hesabınız var mı? Giriş Yap</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}