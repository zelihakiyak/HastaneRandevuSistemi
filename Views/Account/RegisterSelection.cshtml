@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-5 text-center">
    <h2>Hesap Oluştur</h2>
    <p class="text-muted">Lütfen kayıt türünü seçiniz</p>

    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-center align-items-center p-5">
                    <h3 class="text-primary">Hasta</h3>
                    <p>Randevu almak ve geçmiş randevularınızı görüntülemek için.</p>
                    <a asp-action="RegisterPatient" class="btn btn-primary w-100 mt-3">Hasta Olarak Kayıt Ol</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-center align-items-center p-5">
                    <h3 class="text-success">Doktor</h3>
                    <p>Randevularınızı yönetmek ve hasta takibi yapmak için.</p>
                    <a asp-action="RegisterDoctor" class="btn btn-success w-100 mt-3">Doktor Olarak Kayıt Ol</a>
                </div>
            </div>
        </div>
    </div>
</div>
