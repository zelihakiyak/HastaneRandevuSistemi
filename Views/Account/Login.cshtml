    .nav-tabs .nav-link {
        border-top-left-radius: 0;
        border-top-right-radius: 0;
        border: 0;
        border-bottom: 2px solid transparent;
        color: #6c757d;
        padding-top: 1rem;
        padding-bottom: 1rem;
        font-weight: 500;
    }

        .nav-tabs .nav-link.active {
            color: #0d6efd;
            border-color: #0d6efd;
            background-color: #f8f9fa;
        }

    #doctor-tab.active {
        color: #198754;
        border-color: #198754;
    }
